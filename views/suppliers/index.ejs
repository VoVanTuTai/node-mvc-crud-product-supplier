<%- include('../partials/header') %>

<h2>Danh sách Suppliers</h2>
<a href="/suppliers/new" class="btn btn-primary mb-3">Thêm Supplier</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Tên</th>
      <th>Địa chỉ</th>
      <th>SĐT</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% suppliers.forEach(supplier => { %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.phone %></td>
        <td>
          <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-warning btn-sm">Sửa</a>
          <a href="/suppliers/<%= supplier._id %>/delete" class="btn btn-danger btn-sm">Xóa</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
